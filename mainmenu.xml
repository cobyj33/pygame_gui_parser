<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pygamegui>

<pygamegui> 
    <head>
        <themes>
            <theme>styles.json</theme>
        </themes>
    </head>

    <body res="800 600">
        <panel rect="0 0 800 600" id="background">
            <panel rect="20 20 760 200" id="top-bar">
                <label rect="20 20 700 160">Main Menu</label>
            </panel>

            <panel rect="20 -220 760 200" anchors="bottom" id="bottom-bar">
                <button rect="100 0 150 100" anchors="centery">Play</button>
                <button rect="300 0 150 100" anchors="centery">Options</button>
                <button rect="500 0 150 100" anchors="centery">Quit</button>
            </panel>
        </panel>

    </body>
</pygamegui>